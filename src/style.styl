.--cart-container {
    
    .overlay {
        position: fixed;
        z-index: 999;
        width: 100%;
        height: 100%;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        display: none;
        background-color: rgba(255, 255, 255, .7);
                 
         &.visible {
            display: inline;
         }
    }
    
    .cart-box {
        width: 0;
        z-index: 999999;
        position: absolute;
        transition: width .6s;
        min-height: 100%;
        right: 0;
        top: 0;
        background-color: #EEEEEE;
        box-shadow: -5px 5px 25px #888888;
        overflow: hidden;

        .hide-this {
            display: none;
        }
        
    }
    
}


@media (min-width: 0px) {
    .--cart-container .cart-box.visible { width:100%; }
    .--cart-container .cart-box .cart-box-fix { width:100%; }
}

@media (min-width: 300px) {
    .--cart-container .cart-box.visible { width:300px; }
    .--cart-container .cart-box .cart-box-fix { width:300px; }
}

@media (min-width: 500px) {
    .--cart-container .cart-box.visible { width:400px; }
    .--cart-container .cart-box .cart-box-fix { width:400px; }
}

@media (min-width: 600px) {
    .--cart-container .cart-box.visible { width:500px; }
    .--cart-container .cart-box .cart-box-fix { width:500px; }
}
